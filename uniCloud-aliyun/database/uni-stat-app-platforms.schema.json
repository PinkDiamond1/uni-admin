// 应用平台表
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "平台名称 如 微信小程序，安卓，苹果"
		},
		"code": {
			"bsonType": "string",
			"description": "平台代码,如 android:安卓, ios：苹果, wxmp:微信小程序"
		},
		"report_code": {
			"bsonType": "string",
			"description": "平台上报代码"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间"
		}
	}
}
